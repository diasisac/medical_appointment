{
  "openapi": "3.0.0",
  "info": {
    "title": "Serviço de agendamento de consulta",
    "description": "Essa API é responsável pelo agendamento de consultas médicas",
    "version": "1.0.0"
  },
  "paths": {
    "/specialities": {
      "post": {
        "tags": [
          "Speciality"
        ],
        "description": "Cadastro de especialidades",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SpecialityRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SpecialityResponse"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Autenticação do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "token gerado"
          },
          "401": {
            "description": "mensagem de erro"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SpecialityRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da especialidade",
            "example": "Cardiologia"
          },
          "description": {
            "type": "string",
            "description": "Descrição da especialidade",
            "example": "Especialidade responsável pelo tratamento de doenças do coração"
          }
        },
        "required": [
          "name",
          "description"
        ]
      },
      "SpecialityResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da especialidade",
            "example": "Cardiologia"
          },
          "description": {
            "type": "string",
            "description": "Descrição da especialidade",
            "example": "Especialidade responsável pelo tratamento de doenças do coração"
          },
          "id": {
            "type": "string",
            "description": "Identificador da especialidade",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "description": "Data de criação da especialidade",
            "format": "date"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "username teste",
            "example": "username_teste"
          },
          "password": {
            "type": "string",
            "description": "Senha do usuário",
            "example": "senha_teste"
          }
        },
        "required": [
          "username",
          "password"
        ]
      }
    }
  }
}
